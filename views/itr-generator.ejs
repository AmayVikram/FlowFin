<%- include('partials/header') %>

<div class="container">
  <div class="row mb-4">
    <div class="col-md-12">
      <div class="card shadow">
        <div class="card-header bg-primary text-white">
          <h3 class="mb-0" style="text-align: center; font-family: Roboto; color: white; font-size: 1.8rem;"><i class="bi bi-file-earmark-pdf me-2"></i>Income Tax Return PDF Generator</h3>
        </div>
        <div class="card-body">
          <form id="taxReturnForm">
            <div class="row">
              <!-- Personal Information -->
              <div class="col-md-12 mb-4">
                <div class="card">
                  <div class="card-header" style="background-color: primary; color: #333; font-weight: bold;">
                    <h5 class="mb-0 " style="color: white; font-size: 1.4rem;">Personal Information</h5>
                  </div>
                  <div class="card-body">
                    <div class="row">
                      <div class="col-md-6 mb-3">
                        <label for="name" class="form-label" style="color: black; font-size: 1.4rem;">Full Name</label>
                        <input type="text" class="form-control" id="name" name="personalInfo.name" required style="font-size: 1.4rem;">
                      </div>
                      <div class="col-md-6 mb-3">
                        <label for="panNumber" class="form-label" style="color: black; font-size: 1.4rem;">PAN Number</label>
                        <input type="text" class="form-control" id="panNumber" name="personalInfo.panNumber" required style="font-size: 1.4rem;">
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-md-6 mb-3">
                        <label for="dateOfBirth" class="form-label" style="color: black; font-size: 1.4rem;">Date of Birth</label>
                        <input type="date" class="form-control" id="dateOfBirth" name="personalInfo.dateOfBirth" required style="font-size: 1.4rem;">
                      </div>
                      <div class="col-md-6 mb-3">
                        <label for="assessmentYear" class="form-label" style="color: black; font-size: 1.4rem;">Assessment Year</label>
                        <select class="form-select" id="assessmentYear" name="personalInfo.assessmentYear" required style="font-size: 1.4rem;">
                          <option value="2024-25">2024-25</option>
                          <option value="2023-24">2023-24</option>
                          <option value="2022-23">2022-23</option>
                        </select>
                      </div>
                    </div>
                    <div class="mb-3">
                      <label for="address" class="form-label" style="color: black; font-size: 1.4rem;">Address</label>
                      <textarea class="form-control" id="address" name="personalInfo.address" rows="2" required style="font-size: 1.4rem;"></textarea>
                    </div>
                    <div class="row">
                      <div class="col-md-6 mb-3">
                        <label for="mobile" class="form-label" style="color: black; font-size: 1.4rem;">Mobile Number</label>
                        <input type="tel" class="form-control" id="mobile" name="personalInfo.mobile" required style="font-size: 1.4rem;">
                      </div>
                      <div class="col-md-6 mb-3">
                        <label for="email" class="form-label" style="color: black; font-size: 1.8rem;">Email Address</label>
                        <input type="email" class="form-control" id="email" name="personalInfo.email" required style="font-size: 1.4rem;">
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              
              <!-- Income Details -->
              <div class="col-md-6 mb-4">
                <div class="card">
                  <div class="card-header" style="background-color: primary; color: #333; font-weight: bold;">
                    <h5 class="mb-0" style="color: white; font-size: 1.8rem;">Income Details</h5>
                  </div>
                  <div class="card-body">
                    <div class="mb-3">
                      <label for="salary" class="form-label" style="color: black; font-size: 1.4rem;">Salary Income</label>
                      <div class="input-group">
                        <span class="input-group-text" style="font-size: 1.4rem;">₹</span>
                        <input type="number" class="form-control" id="salary" name="incomeDetails.salary" value="0" style="font-size: 1.4rem;">
                      </div>
                    </div>
                    <div class="mb-3">
                      <label for="interest" class="form-label" style="color: black; font-size: 1.4rem;">Interest Income</label>
                      <div class="input-group">
                        <span class="input-group-text" style="font-size: 1.4rem;">₹</span>
                        <input type="number" class="form-control" id="interest" name="incomeDetails.interest" value="0" style="font-size: 1.4rem;">
                      </div>
                    </div>
                    <div class="mb-3">
                      <label for="rental" class="form-label" style="color: black; font-size: 1.4rem;">Rental Income</label>
                      <div class="input-group">
                        <span class="input-group-text" style="font-size: 1.4rem;">₹</span>
                        <input type="number" class="form-control" id="rental" name="incomeDetails.rental" value="0" style="font-size: 1.4rem;">
                      </div>
                    </div>
                    <div class="mb-3">
                      <label for="business" class="form-label" style="color: black; font-size: 1.4rem;">Business Income</label>
                      <div class="input-group">
                        <span class="input-group-text" style="font-size: 1.4rem;">₹</span>
                        <input type="number" class="form-control" id="business" name="incomeDetails.business" value="0" style="font-size: 1.4rem;">
                      </div>
                    </div>
                    <div class="mb-3">
                      <label for="capitalGains" class="form-label" style="color: black; font-size: 1.4rem;">Capital Gains</label>
                      <div class="input-group">
                        <span class="input-group-text" style="font-size: 1.4rem;">₹</span>
                        <input type="number" class="form-control" id="capitalGains" name="incomeDetails.capitalGains" value="0" style="font-size: 1.4rem;">
                      </div>
                    </div>
                    <div class="mb-3">
                      <label for="otherIncome" class="form-label" style="color: black; font-size: 1.4rem;">Other Income</label>
                      <div class="input-group">
                        <span class="input-group-text" style="font-size: 1.4rem;">₹</span>
                        <input type="number" class="form-control" id="otherIncome" name="incomeDetails.other" value="0" style="font-size: 1.4rem;">
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              
              <!-- Deductions -->
              <div class="col-md-6 mb-4">
                <div class="card">
                  <div class="card-header" style="background-color: primary; color: #333; font-weight: bold;">
                    <h5 class="mb-0" style="color: white; font-size: 1.4rem;">Deductions</h5>
                  </div>
                  <div class="card-body">
                    <div class="mb-3">
                      <label for="section80C" class="form-label" style="color: black; font-size: 1.4rem;">Section 80C (Max ₹1,50,000)</label>
                      <div class="input-group">
                        <span class="input-group-text" style="font-size: 1.4rem;">₹</span>
                        <input type="number" class="form-control" id="section80C" name="deductions.section80C" value="0" style="font-size: 1.4rem;">
                      </div>
                    </div>
                    <div class="mb-3">
                      <label for="section80D" class="form-label" style="color: black; font-size: 1.4rem;">Section 80D - Medical Insurance</label>
                      <div class="input-group">
                        <span class="input-group-text" style="font-size: 1.4rem;">₹</span>
                        <input type="number" class="form-control" id="section80D" name="deductions.section80D" value="0" style="font-size: 1.4rem;">
                      </div>
                    </div>
                    <div class="mb-3">
                      <label for="section80G" class="form-label" style="color: black; font-size: 1.4rem;">Section 80G - Donations</label>
                      <div class="input-group">
                        <span class="input-group-text" style="font-size: 1.4rem;">₹</span>
                        <input type="number" class="form-control" id="section80G" name="deductions.section80G" value="0" style="font-size: 1.4rem;">
                      </div>
                    </div>
                    <div class="mb-3">
                      <label for="housingLoan" class="form-label" style="color: black; font-size: 1.4rem;">Housing Loan Interest</label>
                      <div class="input-group">
                        <span class="input-group-text" style="font-size: 1.4rem;">₹</span>
                        <input type="number" class="form-control" id="housingLoan" name="deductions.housingLoan" value="0" style="font-size: 1.4rem;">
                      </div>
                    </div>
                    <div class="mb-3">
                      <label for="otherDeductions" class="form-label" style="color: black; font-size: 1.4rem;">Other Deductions</label>
                      <div class="input-group">
                        <span class="input-group-text" style="font-size: 1.4rem;">₹</span>
                        <input type="number" class="form-control" id="otherDeductions" name="deductions.other" value="0" style="font-size: 1.4rem;">
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              
              <!-- Tax Paid Details -->
              <div class="col-md-12 mb-4">
                <div class="card">
                  <div class="card-header" style="background-color: primary; color: #333; font-weight: bold;">
                    <h5 class="mb-0" style="color: white; font-size: 1.4rem;">Tax Paid Details</h5>
                  </div>
                  <div class="card-body">
                    <div class="row">
                      <div class="col-md-4 mb-3">
                        <label for="tdsSalary" class="form-label" style="color: black; font-size: 1.4rem;">TDS on Salary</label>
                        <div class="input-group">
                          <span class="input-group-text" style="font-size: 1.4rem;">₹</span>
                          <input type="number" class="form-control" id="tdsSalary" name="taxPaid.tdsSalary" value="0" style="font-size: 1.4rem;">
                        </div>
                      </div>
                      <div class="col-md-4 mb-3">
                        <label for="tdsInterest" class="form-label" style="color: black; font-size: 1.4rem;">TDS on Interest</label>
                        <div class="input-group">
                          <span class="input-group-text" style="font-size: 1.4rem;">₹</span>
                          <input type="number" class="form-control" id="tdsInterest" name="taxPaid.tdsInterest" value="0" style="font-size: 1.4rem;">
                        </div>
                      </div>
                      <div class="col-md-4 mb-3">
                        <label for="tdsOther" class="form-label" style="color: black; font-size: 1.4rem;">TDS on Other Income</label>
                        <div class="input-group">
                          <span class="input-group-text" style="font-size: 1.4rem;">₹</span>
                          <input type="number" class="form-control" id="tdsOther" name="taxPaid.tdsOther" value="0" style="font-size: 1.4rem;">
                        </div>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-md-6 mb-3">
                        <label for="advanceTax" class="form-label" style="color: black; font-size: 1.4rem;">Advance Tax</label>
                        <div class="input-group">
                          <span class="input-group-text" style="font-size: 1.4rem;">₹</span>
                          <input type="number" class="form-control" id="advanceTax" name="taxPaid.advanceTax" value="0" style="font-size: 1.4rem;">
                        </div>
                      </div>
                      <div class="col-md-6 mb-3">
                        <label for="selfAssessment" class="form-label" style="color: black; font-size: 1.4rem;">Self-Assessment Tax</label>
                        <div class="input-group">
                          <span class="input-group-text" style="font-size: 1.4rem;">₹</span>
                          <input type="number" class="form-control" id="selfAssessment" name="taxPaid.selfAssessment" value="0" style="font-size: 1.4rem;">
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            
            <div class="d-grid gap-2">
              <button type="submit" class="btn btn-primary" style="font-size: 1.4rem;">Generate IT