<%- include('partials/header') %>

<div class="container-fluid py-4 chat-wrapper">
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">
            <div class="row chat-row">
                <div class="col-md-4 col-lg-3 chat-sidebar">
                    <h3 class="mb-3">Past Conversations</h3>
                    <button id="new-chat-btn" class="btn btn-primary mb-3 w-100">
                        <i class="bi bi-plus-circle"></i> New Chat
                    </button>
                    <div class="conversation-list" id="conversation-list">
                        <!-- Past conversations will be loaded here -->
                    </div>
                </div>
                <div class="col-md-8 col-lg-9 chat-container">
                    <div class="chat-header bg-primary text-white p-3 rounded-top">
                        <div class="d-flex justify-content-between align-items-center">
                            <button id="toggle-sidebar" class="btn btn-sm btn-outline-light d-md-none">
                                <i class="bi bi-list"></i>
                            </button>
                            <h2 class="h5 mb-0">Financial Assistant</h2>
                            <span></span> <!-- Empty span for flex alignment -->
                        </div>
                    </div>
                    <div class="chat-messages p-3 border border-top-0 border-bottom-0" id="chat-messages">
                        <!-- Messages will appear here -->
                    </div>
                    <div class="chat-input p-3 border rounded-bottom">
                        <div class="input-group">
                            <textarea id="user-input" class="form-control" placeholder="Ask about financial planning..." rows="1"></textarea>
                            <button id="send-btn" class="btn btn-primary">
                                <i class="bi bi-send"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



<!-- Context Menu for Conversation Management -->
<div class="context-menu" id="context-menu" style="display: none;">
    <div class="list-group">
        <button class="list-group-item list-group-item-action rename">
            <i class="bi bi-pencil"></i> Rename
        </button>
        <button class="list-group-item list-group-item-action delete">
            <i class="bi bi-trash"></i> Delete
        </button>
    </div>
</div>



<script src="/js/chat.js"></script>

<%- include('partials/footer') %>
